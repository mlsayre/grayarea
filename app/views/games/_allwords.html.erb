<% @allthewords.each do |word| %>
  <% if word == @badword %>
    <li class="word shrunken badword"><span><%= word %></span></li>
  <% elsif @targetwords.include?(word) %>
    <li class="word shrunken targetword"><span><%= word %></span></li>
  <% else %>
    <li class="word shrunken"><span><%= word %></span></li>
  <% end %>
<% end %>