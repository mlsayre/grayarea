<div class="gametop" data-gameid="<%= @game.id %>">New Game</div>

<div class="allwords">
	<span id="allwordslist">
    <%= render 'allwords' %>
  </span>
</div>

<div class="hintarea give">
	<div class="hintheading">
		<div class="notifyarea">
			<span class="hintheadline">Enter your hints</span>
		</div>
		<div class="hints hint1">
			<!-- <span class="hintlabel">Hint 1:</span> -->
			<textarea class="hintenter hint1word" rows="1" placeholder="Hint 1 (One word)"></textarea>
			<div class="wordnumarea">
				<span class="hintnumheading">Applies to this many words:</span>
				<div class="selections hint1number">
				  <button class="button" value="1">1</button>
				  <button class="button" value="2">2</button>
				  <button class="button" value="3">3</button>
				  <button class="button" value="4">4</button>
				  <button class="button" value="5">5</button>
				  <button class="button" value="6">6</button>
				</div>
			</div>
			<button class="button submithint1">Submit First Hint</button>
			<button class="menu"><img src="/assets/menu.png"></button>
		</div>
		<div class="hints hint2 hidden">
			<!-- <span class="hintlabel">Hint 2:</span> -->
			<textarea class="hintenter hint2word" rows="1" placeholder="Hint 2 (One word)"></textarea>
			<div class="wordnumarea">
				<span class="hintnumheading">Applies to this many words:</span>
				<div class="selections hint2number">
				  <button class="button" value="1">1</button>
				  <button class="button" value="2">2</button>
				  <button class="button" value="3">3</button>
				  <button class="button" value="4">4</button>
				  <button class="button" value="5">5</button>
				  <button class="button" value="6">6</button>
				</div>
			</div>
			<div class="firstinfo">(First hint was: <span class="firstinfoword"></span> for <span class="firstinfonum">.</span>)</div>
			<button class="button submithint2">Submit Second Hint</button>
			<button class="menu"><img src="/assets/menu.png"></button>
			<!--<button class="button skiphint2">Skip Second Hint</button>-->
		</div>
		<div class="hints submitted hidden">
			<span class="hintlabel">You've submitted your game!</span>
			<div class="wordnumarea">
				<span class="hintnumheading">Your hints: 
					<span class="submittedword1"></span> applies to <span class="submittednum1"></span><br>
					and <span class="submittedword2"></span> applies to <span class="submittednum2"></span>.
				</span>
			</div>
			<button class="button returntomain">Return to Main</button>
			<button class="menu"><img src="/assets/menu.png"></button>
		</div>
	</div>
</div>

<div class="gamebottom"></div>

<div class="messagebox">
	<div class="messagetitle"></div>
	<div class="messageinfo"></div>
	<div class="messageaction"></div>
	<div class="messagesubtext"></div>
</div>

<div class="pagecover"></div>