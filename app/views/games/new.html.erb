<div class="menulinks">
  <% if current_user %>
    Welcome, <%= current_user.username %>!
  <% else %>
    Welcome, guest! Create an account or login using Google, Facebook, or Twitter to keep track of your scores and compare your games to others'.
  <% end %>
</div>

<div class="mainmenubuttons">
  <%= form_for(@game) do |f| %>

    <div class="actions">
      <% if current_user.lifetimegamesguesser > 2 %>
        <%= f.button "Play as Giver", :class => "button mainplay" %>
      <% else %>
        <%= f.button "Play as Giver", :class => "button mainplay disabled" %>
      <% end %>
    </div>
    <br>

  <% end %>

  <button class="button startguess">Play as Guesser</button><br>

  <%= link_to(image_tag("/assets/Help-128.png", :alt => "How to Play", :title => "How to Play"), howtoplay_pages_path, :class => "menunav") %>
  <%= link_to(image_tag("/assets/Graph-03-128.png", :alt => "See rankings", :title => "See rankings"), rankings_pages_path, :class => "menunav") %>
  <!-- <%= link_to(image_tag("/assets/Trophy-128.png", :alt => "Feats of Stretch", :title => "Feats of Stretch"), feats_pages_path, :class => "menunav") %> -->
  <a class="menunav featsnav" href="/pages/feats" alt="Feats of Stretch" title="Feats of Stretch">
    <img src="/assets/Trophy-128.png">
    <% if current_user.heartnotify > 0 %>
      <span class="heartsnotify"><img src="/assets/Heart-48.png">
        <span class="notifynumber"><%= current_user.heartnotify %></span>
      </span>
    <% end %>
  </a>
  <% if current_user.lifetimegamesguesser < 3 %>
    <span class="guessermsg">(Play 3 games as Guesser to activate Giver button)</span>
  <% end %>
</div>

<div class="maingamelist">
  Your Games<br>
  <div class="guessergames">
    <span class="gamelisttitle">Giver:</span>
    <span id="gamesgiverlist">
      <%= render 'giverlist' %>
    </span>
    <div id="paginator" style="margin-top: 10px; text-align: center;">
      <%= paginate @gamesgiverlist, remote: true, :param_name => 'page' %>
    </div>
  </div>
  <div class="guessergames">
    <span class="gamelisttitle">Guesser:</span>
    <span id="gamesguesserlist">
      <%= render 'guesserlist' %>
    </span>
    <div id="paginator2" style="margin-top: 10px; text-align: center;">
      <%= paginate @gamesguesserlist, remote: true, :param_name => 'page_2' %>
    </div>
  </div>
</div>

<p id="notice"><%= notice %></p>

<%= link_to "About the Game (Aug 29, 2017)", about_pages_path, :style => "color: red;" %><br>
<%= link_to "Edit your information", edit_user_registration_path %><br>
<%= link_to('Logout', destroy_user_session_path, :method => :delete) %>

<script>
$(".featslink").click(function() {
  $.ajax({
      url: "/games/resetheartnotify",
      type: "POST"
    })
})
</script>
