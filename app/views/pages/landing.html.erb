<div id="landing-topbar"></div>
<div class="landingtitle">
  <span>Word Stretch</span>
  <div class="subtitle">Stretch your mind as you stretch your words!</div>

  <div id="landing-signin">
    <br>
    <%= link_to "Sign in", new_user_session_path %>
    or
    <%= link_to "Sign up", new_user_registration_path %><br><br>
    
  </div>
</div>

<div id="signin-with">Or sign in with:<br>
  <div class="login-logos" id="signin-twitter">
    <%= link_to(image_tag("Twitter-login.png", size: "48", alt: "Twitter login"),
        omniauth_authorize_path(:user, :twitter)) %><br>
    <%= link_to "Twitter", omniauth_authorize_path(:user, :twitter) %>
  </div>

 <div class="login-logos" id="signin-facebook">
    <%= link_to(image_tag("Facebook-login.png", size: "48", alt: "Facebook login"),
        omniauth_authorize_path(:user, :facebook)) %><br>
    <%= link_to "Facebook", omniauth_authorize_path(:user, :facebook) %>
  </div>

  <div class="login-logos" id="signin-google">
    <%= link_to(image_tag("Google-login.PNG", size: "48", alt: "Google login"),
        omniauth_authorize_path(:user, :google_oauth2)) %><br>
    <%= link_to "Google", omniauth_authorize_path(:user, :google_oauth2) %>
  </div>
</div>

<div id="landing-bottombar"></div>

<script>
$(document).on('turbolinks:load', function() {
  $(".landingtitle span").addClass("stretched");
  setInterval(function() {
    $(".landingtitle span").toggleClass("stretched");
  }, 5000)
});
</script>
